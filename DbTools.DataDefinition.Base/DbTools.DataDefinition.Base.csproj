<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFramework>net8.0</TargetFramework>
	<PackageId>FizzCode.DbTools.DataDefinition.Base</PackageId>
	<Authors>FizzCode Ltd.</Authors>
	<Product>FizzCode DbTools</Product>
	<Description>Database definition base for Fizzcode DbTools project</Description>
	<Copyright>Copyright Â© 2019-2024 FizzCode Ltd.</Copyright>
	<RepositoryUrl>https://github.com/FizzcodeSoftware/DbTools</RepositoryUrl>
	<Platforms>AnyCPU</Platforms>
	<CodeAnalysisRuleSet>..\FizzCode.ruleset</CodeAnalysisRuleSet>
	<AssemblyName>FizzCode.DbTools.DataDefinition.Base</AssemblyName>
	<RootNamespace>FizzCode.DbTools.DataDefinition.Base</RootNamespace>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\DbTools.Common\DbTools.Common.csproj" />
    <ProjectReference Include="..\DbTools.Configuration\DbTools.Configuration.csproj" />
    <ProjectReference Include="..\DbTools.Factory.Collections\DbTools.Factory.Collections.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="ColumnProperties\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="8.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Roslynator.Analyzers" Version="4.11.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Roslynator.CodeAnalysis.Analyzers" Version="4.11.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Roslynator.Formatting.Analyzers" Version="4.11.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
